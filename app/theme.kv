# theme.kv
<GradientBackground@BoxLayout>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
            texture: self.gradient_texture
    gradient_texture: self.make_gradient()

    def make_gradient(self):
        from kivy.graphics.texture import Texture
        tex = Texture.create(size=(1, 64), colorfmt="rgba")
        buf = b""
        for i in range(64):
            t = i / 63.0
            r = int(60 + (128-60) * t)   # azul â†’ roxo
            g = int(120 - 60 * t)
            b = int(200 + (255-200) * t)
            buf += bytes((r, g, b, 255))
        tex.blit_buffer(buf, colorfmt="rgba", bufferfmt="ubyte")
        tex.wrap = "repeat"
        tex.uvsize = (1, -1)
        return tex

<StyledButton@Button>:
    background_normal: ""
    background_color: 0.2, 0.5, 0.9, 1
    color: 1, 1, 1, 1
    font_size: dp(16)
    size_hint_y: None
    height: dp(44)
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [12]

<StyledInput@TextInput>:
    multiline: False
    size_hint_y: None
    height: dp(44)
    padding: [10, 10]
    background_normal: ""
    background_active: ""
    background_color: (1, 1, 1, 0.15)
    foreground_color: (1, 1, 1, 1)
    cursor_color: (1, 1, 1, 1)
    hint_text_color: (0.9, 0.9, 0.9, 0.7)
